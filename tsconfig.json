{
  "compilerOptions": {
    "target": "es2018",        
    "module": "commonjs",     
    "allowJs": true,          
    "outDir": "./dist",       
    "moduleResolution": "node",
    "rootDir": "./src",     
    "esModuleInterop": true,  
    "strict": true,           
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
